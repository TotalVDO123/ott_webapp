{
    "compilerOptions": {
        "outDir": "build",
        "incremental": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "types": ["vitest/globals"],
    },
    "include": ["test/**/*", "src/**/*", "instrument.mjs"],
    "exclude": ["node_modules", "build"],
}
